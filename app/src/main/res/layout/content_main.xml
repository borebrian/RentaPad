<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        android:gravity="top"

        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/load_content"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:background="@drawable/bg6"


            android:orientation="vertical">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="93dp"
                app:srcCompat="@drawable/logo3"
                android:id="@+id/imageView2"

                android:layout_marginTop="100dp">

        </ImageView>


        <TextView
                android:text="RentalPoint"
                android:textFontWeight="bold"
                android:layout_width="wrap_content"
                android:fontFamily="@font/century"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
        />
<!--        <TextView
                android:text="Tenant module"
                android:textFontWeight="bold"
                android:layout_width="wrap_content"
                android:fontFamily="@font/century"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#DC7633"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:id="@+id/SLOGAN"

        />-->
        <ProgressBar
                android:layout_marginTop="250dp"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:indeterminateTint="#ffffff"
                android:id="@+id/progressBar2"/>

        <TextView
                android:text="Loading..."
                android:textStyle="bold"
                android:textFontWeight="bold"
                android:layout_width="wrap_content"
                android:fontFamily="@font/century"
                android:textSize="15dp"

                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/loading"
        />

    </LinearLayout>



        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                android:foregroundGravity="center"
                android:id="@+id/card1"
                android:orientation="vertical"
                app:cardBackgroundColor="#F2F3F4"
                android:outlineAmbientShadowColor="@android:color/black"
                android:outlineSpotShadowColor="@android:color/black"
                app:cardElevation="3dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent">
            <ImageView
                    android:layout_width="match_parent"

                    android:layout_gravity="center"
                    android:layout_marginBottom="90dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/internet"
                    android:id="@+id/imageView3"
            />

            <TextView
                    android:text="Oooops! no internet connection.Make sure you have internet access to access our services"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/century"
                    android:textColor="#337AB7"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView2"/>
            <Button
                    android:text="Turn on data"
                    android:padding="10dp"
                    android:elevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_gravity="center"
                    android:background="#337AB7"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/button"/>
            <TextView
                    android:layout_marginTop="200dp"
                    android:text="Â© Copyright 2019 REMO softwares designs"
                    android:textFontWeight="bold"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/century"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:id="@+id/r"

            />


        </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>